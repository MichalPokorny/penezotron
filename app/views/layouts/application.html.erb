<!DOCTYPE html>
<html>
<head>
  <title>Penezotron</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if current_user %>
	<div class="navbar navbar-inverse">
		<div class="navbar-inner">
			<ul class="nav nav-tabs">

				<li><%= menu_icon_link current_user.username, current_user, 'user' %></li>
				<li><%= menu_icon_link "Home", :home, 'home' %></li>
				<li><%= menu_icon_link "Transakce", transactions_path, 'file' %></li>
				<li><%= menu_icon_link "Vyrovnání", :conciliation, 'retweet' %></li>
				<li><%= menu_icon_link "Změna údajů", edit_user_path(current_user.id), 'edit' %></li>
				<li><%= menu_icon_link "Registrace nového uživatele", new_user_path, 'asterisk' %></li>
				<li><%= menu_icon_link "Odhlásit", :logout, 'signout' %></li>
			</ul>
		</div>
	</div>
	<% end %>

	<div class="container">
		<div class="content">
			<% flash.each do |key,msg| %>
				<div id="<%= key %>">
					<%= msg %>
				</div>
			<% end %>
			<%= yield %>
		</div>
	</div>

</body>
</html>
