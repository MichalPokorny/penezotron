<h1>Seznam transakcí</h1>

<table class="transaction-list table table-striped table-bordered table-hover">
	<thead>
		<tr>
			<th>Věc</th>
			<th>Zaplatil</th>
			<th>Pro</th>
			<th>Kolik</th>
			<th>Vytvořeno</th>
		</tr>
	</thead>

	<tbody>
		<% @transactions.each do |transaction| %>
			<tr>
				<td><%= link_to transaction.name, transaction %></td>
				<td><%= User.find_by_id(transaction.payer).username %></td>
				<td><%= transaction.nice_user_list %></td>
				<td><%= money transaction.amount %></td>
				<td><%= datetime transaction.created_at %></td>
			</tr>
		<% end %>
	</tbody>

	<tfoot>
		<tr>
			<td colspan="5">
				<%= will_paginate @transactions %>
			</td>
		</tr>
	</tfoot>
</table>
