<p id="notice"><%= notice %></p>

<h1>Detail transakce</h1>

<b><%= money @transaction.amount %>: <%= @transaction.name %></b><br />
<b>Koupil:</b> <%= User.find_by_id(@transaction.payer).username %><br />
<b>Pro:</b> <%= @transaction.nice_user_list %> <br />
<b>Poznámky:</b> <%= @transaction.notes %>
<b>Vytvořeno:</b> <%= @transaction.created_at %>
<br />

<%= link_to 'Destroy', @transaction, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Edit', edit_transaction_path(@transaction) %> |
